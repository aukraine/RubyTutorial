<h1>Items</h1>

<% if @items.empty? %>
  <b>No items in store</b>
<% else %>
<table>
  <tr>
    <th>item ID</th>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
  </tr>

  <% @items.each do |i| %>

    <!--<p><%#= link_to i.name, item_path(i) %></p>-->
    <tr>
      <td><%= i.id %></td>
      <td><%= link_to i.name, item_path(i) %></td>
      <td><%= i.price %></td>
      <td><%= link_to "Remove", item_path(i), method: :delete, data: { confirm: "Are you sure?" } %></td>
      <td>Rate: <%= i.votes_count %>, <%= link_to "+", upvote_item_path(i) %></td>
    </tr>

  <% end %>

</table>
<% end %>
